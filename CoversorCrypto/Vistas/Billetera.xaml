<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoversorCrypto.Vistas.Billetera">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <!-- Título -->
            <Label Text="Mi Billetera" FontSize="20" HorizontalOptions="CenterAndExpand" />

            <!-- Área de texto para mostrar datos sobre criptomonedas guardadas -->
            <Editor x:Name="DatosBilleteraEditor" Placeholder="Datos sobre mis criptomonedas guardadas" HeightRequest="150" />

            <!-- Botón "Ingresar nuevo item a Mi Billetera" -->
            <Button Text="Ingresar nuevo item a Mi Billetera" Clicked="IngresarNuevoItemButton_Clicked" BackgroundColor="LightBlue" />

            <!-- Botón "Actualizar datos de Mi Billetera" -->
            <Button Text="Actualizar datos de Mi Billetera" Clicked="ActualizarDatosButton_Clicked" BackgroundColor="LightBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>